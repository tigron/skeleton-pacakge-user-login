<div id="login-wrapper">

	<div id="login-content">

		{% if error %}
			<div class="alert alert-danger">
				{% trans "Username and/or password is incorrect" %}
			</div>
		{% endif %}

		<form action="/skeleton-package-user-login/user_login" method="post">
			<div class="form-group">
				<label>{% trans "Username" %}</label>
				<input type="text" name="username" class="form-control" placeholder="{% trans "Username" %}" />
			</div>
			<div class="form-group">
				<label>{% trans "Password" %}</label>
				<input type="password" name="password" class="form-control" placeholder="{% trans "Password" %}" />
			</div>

			<hr />

			<div class="form-group">
				<button type="submit" class="btn btn-primary">
					{% trans "Log in" %} <span class="glyphicon glyphicon-arrow-right"></span>
				</button>
			</div>
		</form>

	</div>

</div>

<script type="text/javascript">

	$(document).ready(function() {
		$('input[name=username]').focus();
	});

</script>
